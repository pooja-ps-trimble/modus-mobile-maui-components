<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trimble.Modus.Components.Controls.Slider.ToolTipAnchor"
             xmlns:color="clr-namespace:Trimble.Modus.Components.Styles">
  <ContentView.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <color:Colors />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </ContentView.Resources>
  <Polygon Points="{OnIdiom '0 32,15 15,30 32',Phone='0,30 15,15 30,30'}" Fill="{x:StaticResource TrimbleNeutralGray}" StrokeThickness="1" Stroke="{x:StaticResource TrimbleNeutralGray}" StrokeLineJoin="Miter" ScaleX="0.4" ScaleY="0.4" TranslationY="13"/>
</ContentView>
